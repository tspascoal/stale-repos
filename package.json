{
  "name": "stale-repo",
  "version": "1.0.0",
  "private": true,
  "description": "Stale Repo",
  "author": "Tiago Pascoal <tiago@pascoal.net>",
  "license": "ISC",
  "repository": "https://github.com/tspascoal/stale-repo.git",
  "homepage": "https://github.com/tspascoal/stale-repo",
  "bugs": "https://github.com/tspascoal/stale-repo/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc && (tsc -w --preserveWatchOutput & nodemon)",
    "dev": "npm run build:watch",
    "start": "probot run ./lib/index.js",
    "lint": "standard **/*.ts --fix",
    "test": "jest --coverage && standard **/*.ts",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "probot": "^9.5.3",
    "probot-scheduler": "^2.0.0-beta.1"
  },
  "devDependencies": {
    "@types/clone": "^0.1.30",
    "@types/jest": "^26.0.7",
    "@types/nock": "^11.1.0",
    "@types/node": "^13.1.0",
    "@typescript-eslint/parser": "^2.4.0",
    "clone": "^2.1.2",
    "eslint-plugin-typescript": "^0.14.0",
    "jest": "^26.1.0",
    "jest-sonar": "^0.2.10",
    "nock": "^13.0.3",
    "nodemon": "^2.0.4",
    "smee-client": "^1.1.0",
    "standard": "^14.3.4",
    "ts-jest": "^26.1.4",
    "typescript": "^3.6.4"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "parser": "@typescript-eslint/parser",
    "env": [
      "jest"
    ],
    "plugins": [
      "typescript"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "testResultsProcessor": "jest-sonar-reporter",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ]
  },
  "jestSonar": {
    "reportPath": "reports",
    "reportFile": "test-reporter.xml",
    "indent": 4
  }
}
